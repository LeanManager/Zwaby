<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:Zwaby;assembly=Zwaby"
             x:Class="Zwaby.Views.MainPage"
             Title="Home">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="BackgroundColor"
                        Value="White" />
                <Setter Property="FontSize"
                        Value="20" />
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="Margin"
                        Value="8,0,8,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
    
	<Grid Padding="0,20,0,15" RowSpacing="25">
        <!-- 7 rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="70" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="homeImage" Grid.Row="0" Aspect="AspectFit"
               Source="{local:ImageResource Zwaby.Images.child-1245893_1280.jpg}"/>

        <Button Text="Book Cleaning" Grid.Row="1" Style="{StaticResource buttonStyle}"
                Clicked="OnBookCleaningClicked" Margin="8,20,8,0"/>

        <Button Text="Booking Details" Grid.Row="2" Style="{StaticResource buttonStyle}"
                Clicked="OnBookingDetailsClicked"/>

        <Button Text="Profile" Grid.Row="3" Style="{StaticResource buttonStyle}"
                Clicked="OnProfileClicked"/>

    </Grid>

    </ScrollView>
        
</ContentPage>
